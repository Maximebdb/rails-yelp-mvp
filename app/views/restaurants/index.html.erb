<div class="container">
  <div class="col-xs-12 col-md-12">
    <div class="card restaurant">
      <div class='title'>
        <h1>Restaurants</h1>
        <h2>index</h2>
      </div>
    </div>
  </div>
  <% @restaurants.each_with_index do |restaurant, index| %>
    <div class="col-xs-4">
      <div class="card">
        <div class='title'>
          <h1><%= restaurant.name %></h1>
        </div>
        <p><%= restaurant.category %></p>
        <p><%= link_to 'show', "/restaurants/#{restaurant.id}" %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="link">
    <%= link_to "add a new restaurant", "/restaurants/new" %>
</div>
